@model Entities.DTOs.AccountChangePassDTO
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="checkout-area mtb-60px">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-8">
                <div class="checkout-wrapper">
                    <div id="faq" class="panel-group">
                        <div class="panel panel-default single-my-account">
                            <div id="my-account-1" class="panel-collapse collapse show" style="">
                                <div class="panel-body">
                                    <form method="post" action="@Url.ActionLink("ChangePass")" asp-antiforgery="true">
                                        <div class="myaccount-info-wrapper billing-info-wrap">
                                            <div class="account-info-wrapper">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h4>Đổi mật khẩu</h4>
                                                        <h5>Cập nhật mật khẩu tài khoản</h5>
                                                    </div>
                                                    <div class="col-md-6 text-right">
                                                        <a class="btn btn-primary" href="@Url.Action("Index")">Thông tin tài khoản</a>
                                                    </div>
                                                </div>
                                            </div>
                                            @Html.HiddenFor(x => x.id)
                                            @Html.HiddenFor(x => x.username)
                                            @if (ViewData["Error"] != null)
                                            {
                                                <div class="alert-danger p-2 mb-2">@ViewData["Error"].ToString()</div>
                                            }
                                            @if (ViewData["Success"] != null)
                                            {
                                                <div class="alert-success p-2 mb-2">@ViewData["Success"].ToString()</div>
                                            }
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label>Tên đăng nhập <span class="text-red">*</span></label>
                                                        <input type="text" asp-for="username" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="billing-info">
                                                        <label>Mật khẩu mới <span class="text-red">*</span></label>
                                                        <input type="password" asp-for="password" placeholder="Mật khẩu mới">
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="billing-info">
                                                        <label>Nhập lại mật khẩu mới <span class="text-red">*</span></label>
                                                        <input type="password" asp-for="repassword" placeholder="Nhập lại mật khẩu mới">
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="billing-back-btn">
                                                        <div class="billing-btn">
                                                            <button type="submit">Đổi mật khẩu</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

