@model Entities.DTOs.AccountLoginDTO
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-register-area mb-60px mt-53px">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 mx-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#">
                            <h4>Đăng nhập</h4>
                        </a>
                        <a data-bs-toggle="tab" href="@Url.Action("Register", "Account")">
                            <h4>Đăng ký</h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form class="form-horizontal" method="post" action="@Url.ActionLink("Login")" asp-antiforgery="true">
                                        <input type="text" asp-for="username" placeholder="Tên đăng nhập">
                                        <input type="password" asp-for="password" placeholder="Mật khẩu">
                                        @if (ViewData["Error"] != null)
                                        {
                                            <div class="alert-danger p-2">@ViewData["Error"].ToString()</div>
                                        }
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input name="check" id="check" type="checkbox">
                                                <label for="check" class="flote-none" href="javascript:void(0)">Nhớ đăng nhập</label>
                                                <a href="@Url.ActionLink("Forget")">Quên mật khẩu?</a>
                                            </div>
                                            <div class="text-center">
                                                <button type="submit"><span>Đăng nhập</span></button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

