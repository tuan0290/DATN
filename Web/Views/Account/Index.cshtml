@model Entities.Models.Accounts
@{
    ViewData["Title"] = "Chi tiết tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="checkout-area mtb-60px">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-9">
                <div class="checkout-wrapper">
                    <div id="faq" class="panel-group">
                        <div class="panel panel-default single-my-account">
                            <div id="my-account-1" class="panel-collapse collapse show" style="">
                                <div class="panel-body">
                                    <form method="post" action="@Url.ActionLink("Index")" asp-antiforgery="true">
                                        <div class="myaccount-info-wrapper billing-info-wrap">
                                            <div class="account-info-wrapper">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h4>Thông tin tài khoản</h4>
                                                        <h5>Cập nhật thông tin chi tiết tài khoản</h5>
                                                    </div>
                                                    <div class="col-md-6 text-right">
                                                        <a class="btn btn-warning" href="@Url.Action("ChangePass")">Đổi mật khẩu</a>
                                                    </div>
                                                </div>
                                            </div>

                                            @Html.HiddenFor(x => x.Id)
                                            @Html.HiddenFor(x => x.CreateDate)
                                            @Html.HiddenFor(x => x.CreateBy)
                                            @Html.HiddenFor(x => x.IsActive)
                                            @Html.HiddenFor(x => x.Username)
                                            @Html.HiddenFor(x => x.Password)
                                            @if (ViewData["Error"] != null)
                                            {
                                                <div class="alert-danger p-2 mb-2">@ViewData["Error"].ToString()</div>
                                            }
                                            @if (ViewData["Success"] != null)
                                            {
                                                <div class="alert-success p-2 mb-2">@ViewData["Success"].ToString()</div>
                                            }
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label>Tên đăng nhập</label>
                                                        <input type="text" asp-for="Username" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label>Họ và tên</label>
                                                        <input type="text" asp-for="FullName">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="billing-info">
                                                        <label>Giới tính</label>
                                                        <select asp-for="Gender" placeholder="Họ và tên" style="width: 100%;" class="mb-4">
                                                            <option value="3">Chọn giới tính</option>
                                                            <option value="1">Nam</option>
                                                            <option value="2">Nữ</option>
                                                            <option value="3">Khác</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="billing-info">
                                                        <label>Ngày sinh</label>
                                                        <input type="date" asp-for="Birthday" placeholder="Ngày sinh">
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label>Địa chỉ</label>
                                                        <input type="text" asp-for="Address" placeholder="Địa chỉ">
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6">
                                                    <div class="billing-info">
                                                        <label>Email</label>
                                                        <input type="email" asp-for="Email" placeholder="Email">
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6">
                                                    <div class="billing-info">
                                                        <label>Số điện thoại</label>
                                                        <input type="tel" asp-for="Phone" placeholder="Số điện thoại">
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="billing-back-btn">
                                                        <div class="billing-btn">
                                                            <button type="submit">Cập nhật</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="billing-back-btn" style="float:right">
                                                        <div class="billing-btn">
                                                            <button id="listorderreceived" type="button" >Danh sách đơn hàng</button>
                                                            <script type="text/javascript">
                                                                $("#listorderreceived").off("click").on("click", function () {
                                                                    window.location.href = "@Url.Action("ListOrderReceived", "Cart")";
                                                                })
                                                            </script>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

