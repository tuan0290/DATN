<section class="blog-area mb-30px">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Section Title -->
                <div class="section-title">
                    <h2>Tin tức của chúng tôi</h2>
                    <p>Tin tức về sản phẩm, công nghệ, các thủ thuật hay, ... được cập nhật thường xuyên</p>
                </div>
                <!-- Section Title -->
            </div>
        </div>
        <!-- Blog Slider Start -->
        <div class="owl-carousel owl-nav-style owl-loaded owl-drag">
            <div class="owl-stage-outer">
                <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 1920px;">
                    @if (newsHomeHot?.Count > 0)
                    {
                        foreach (var news in newsHomeHot)
                        {
                            <div class="owl-item" style="width: 450px; margin-right: 30px;">
                                <article class="blog-post">
                                    <div class="blog-post-top">
                                        <div class="blog-img">
                                            <img src="@news.ThumbImage" alt="@news.Title">
                                        </div>
                                    </div>
                                    <div class="blog-post-content d-flex">
                                        <div class="blog-post-content-cell">
                                            <a href="@Url.Action("NewsDetail", new { id = news.CategoryId })" class="blog-meta">@news.CategoryName</a>
                                            <h4 class="blog-post-heading"><a href="@Url.Action("NewsDetail", new { id = news.Id })">@news.Title</a></h4>
                                            <p class="blog-text">
                                                @news.SubTitle
                                            </p>
                                            <a class="read-more-btn" href="@Url.Action("NewsDetail", new { id = news.Id })"> Chi tiết <i class="ion-android-arrow-dropright-circle"></i></a>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        }
                    }
                </div>
            </div><div class="owl-nav"><div class="owl-prev disabled">prev</div><div class="owl-next">next</div></div><div class="owl-dots disabled"></div>
        </div>
        <!--  Blog Slider End -->
    </div>
</section>