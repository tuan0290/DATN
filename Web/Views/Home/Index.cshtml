<!-- Best Sells Area Start -->
<section class="best-sells-area mb-30px">
    <div class="container">
        <!-- Section Title Start -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Hàng bán chạy nhất</h2>
                    <p>Danh sách sản phẩm bán chạy luôn được cập nhật</p>
                </div>
            </div>
        </div>
        <!-- Section Title End -->
        <!-- Best Sell Slider Carousel Start -->
        <div class="best-sell-slider owl-carousel owl-nav-style">
            <!-- Single Item -->
            @if (listHomeHot?.Count > 0)
            {
                foreach (var item in listHomeHot)
                {
                    <article class="list-product">
                        <div class="img-block">
                            <a href="@Url.Action("ProductDetails", "Home", new { id = item.Id })" class="thumbnail">
                                <img class="first-img" src="@item.MainImageThumb" alt="">
                                <img class="second-img" src="@item.MainImageThumb" alt="">
                            </a>
                        </div>
                        <ul class="product-flag">
                            <li class="new">New</li>
                        </ul>
                        <div class="product-decs">
                            <a class="inner-link" href="@Url.Action("ProductDetails", "Home", new { id = item.Id })"><span>@item.ProductCategory.CategoryName</span></a>
                            <h2><a href="@Url.Action("ProductDetails", "Home", new { id = item.Id })" class="product-link">@item.Name</a></h2>
                            <div class="rating-product">
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                            </div>
                            <div class="pricing-meta">
                                <ul>
                                    @if (item.IsPromote)
                                    {
                                        <li class="old-price">@item.Price.GetValueOrDefault(0).ToString("N0") đ</li>
                                        <li class="current-price">@item.PromotionPrice.GetValueOrDefault(0).ToString("N0") đ</li>
                                    }
                                    else
                                    {
                                        <li class="old-price not-cut">@item.Price.GetValueOrDefault(0).ToString("N0") đ</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="add-to-link">
                            <ul>
                                <li class="cart"><a class="cart-btn" href="@Url.Action("ProductDetails", "Home", new { id = item.Id })">Chi tiết </a></li>
                            </ul>
                        </div>
                    </article>
                }
            }
        </div>
        <!-- Best Sells Carousel End -->
    </div>
</section>
<!-- Best Sells Slider End -->
