    <!-- bs-custom-file-input -->
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- Toastr -->
    <script src="~/plugins/toastr/toastr.min.js"></script>
    @if (TempData["AlertMessage"] != null)
    {
        @if (TempData["AlertType"].ToString().Trim() == "success")
        {
            <script type="text/javascript">
                window.setTimeout(function () {
                    toastr.options = {
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "onclick": null,
                        "showDuration": "100",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    toastr.success('@TempData["AlertMessage"]');
                }, 1000);
            </script>
        }
        else if (TempData["AlertType"].ToString().Trim() == "warning")
        {
            <script type="text/javascript">
                window.setTimeout(function () {
                    toastr.options = {
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "onclick": null,
                        "showDuration": "100",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    toastr.warning('@TempData["AlertMessage"]');
                }, 1000);
            </script>
        }
        else if (TempData["AlertType"].ToString().Trim() == "error")
        {
            <script type="text/javascript">
                window.setTimeout(function () {
                    toastr.options = {
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "onclick": null,
                        "showDuration": "100",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    toastr.error('@TempData["AlertMessage"]');
                }, 1000);
            </script>
        }
        else
        {
            <script type="text/javascript">
                window.setTimeout(function () {
                    toastr.options = {
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "onclick": null,
                        "showDuration": "100",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    toastr.info('@TempData["AlertMessage"]');
                }, 1000);
            </script>
        }
    }
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
